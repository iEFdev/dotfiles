#
# ~/.bash_exports
#
#
# Misc PATH's and exports, to keep .bashrc clean(er).
#
# Load it in (beginning of) ~/.bashrc with:
# ------------------------------------------------------------------------------
#   # Load: ~/.bash_exports (PATH's and misc exports)
#   [ -f ~/.bash_exports ] && . ~/.bash_exports
# ------------------------------------------------------------------------------
#


# Composer
_CPOS="$HOME/.composer/vendor/bin"

# ShellScripts
_Sh="$HOME/ShellScripts"

# xbin for my own scripts
_xbin="/usr/local/xbin"

# export PATH.
export PATH="$_CPOS:usr/local/bin:/usr/local/sbin:$_xbin:$_Sh:$PATH"

# Set architecture flags
export ARCHFLAGS="-arch x86_64"

# No .DS_Store etc in "tar"
# 10.4 + 10.5+
export COPY_EXTENDED_ATTRIBUTES_DISABLE=true
export COPYFILE_DISABLE=true


# Additional MANPATH's
# ------------------------------------------------------------------------------

# Macports
#export MANPATH=/path/to/share/man:$MANPATH


# Bash colors
# ------------------------------------------------------------------------------
export CLICOLOR=1
export LSCOLORS=Exfxcxdxbxegedabagacad
export GREP_COLOR='1;33'

# Colors in man pages
export LESS_TERMCAP_mb=$'\E[01;31m'
export LESS_TERMCAP_md=$'\E[01;38;5;75m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[0;38;5;246m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[04;38;5;83m'
